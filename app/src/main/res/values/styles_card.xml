<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PenetrationCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#4DFFFFFF</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/defaultCornerRadius</item>
    </style>

    <style name="TopRoundedCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/TopRoundedAppearance</item>
    </style>

    <style name="TopRoundedAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/defaultCornerRadius</item>
        <item name="cornerSizeTopRight">@dimen/defaultCornerRadius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>